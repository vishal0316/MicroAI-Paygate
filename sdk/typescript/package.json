{
  "name": "@microai/paygate-sdk",
  "version": "1.0.0",
  "description": "TypeScript SDK for MicroAI-Paygate with EIP-712 signing and receipt verification",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "test": "vitest run",
    "test:watch": "vitest",
    "type-check": "tsc --noEmit",
    "dev": "tsup --watch"
  },
  "keywords": [
    "paygate",
    "microai",
    "eip-712",
    "payment",
    "web3",
    "ethereum",
    "receipt",
    "verification"
  ],
  "author": "MicroAI-Paygate Contributors",
  "license": "MIT",
  "dependencies": {
    "ethers": "^6.13.0"
  },
  "devDependencies": {
    "@types/node": "^20.14.0",
    "tsup": "^8.1.0",
    "typescript": "^5.5.0",
    "vitest": "^1.6.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
